<script type="text/javascript">
    function Engine() {
        var Fps = 30;

        this.Update = function () {
            console.log(Fps);
        };

        this.Draw = function () {
            console.log("draw");
        };

        this.ChangeFPS = function(newfps)
        {
            Fps = newfps;
        };

        this.GetFPS = function()
        {
            return Fps;
        }
    };

    Execute = function (engine) {
        engine.Update();
        engine.Draw();
    };

    var myEngine = new Engine();
    setInterval(function () { Execute(myEngine) }, 1000 / myEngine.GetFPS());
</script>
